<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/easy_background">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@mipmap/choose_lvl_hat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/lvl_back"
            style="@style/mainButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start|center"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:icon="@mipmap/btn_back"
            app:iconSize="30dp"
            app:iconTint="@color/main_text_color"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="5dp"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/mainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:includeFontPadding="false"
            android:text="@string/level"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/level_number"
            style="@style/mainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:includeFontPadding="false"
            android:text="1"
            android:textSize="28sp" />
    </FrameLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button1"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />
            <Button
                android:id="@+id/button2"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button3"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />
            <Button
                android:id="@+id/button4"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/button5"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button6"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />
            <Button
                android:id="@+id/button7"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button8"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button9"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button10"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button11"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button12"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button13"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button14"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button15"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

            <Button
                android:id="@+id/button16"
                style="@style/medium_cube_style"
                android:background="@drawable/cube_1" />

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/cactus" />

        <TextView
            android:id="@+id/turns_left"
            style="@style/mainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="9"
            android:textColor="@color/black70"
            android:textSize="22sp" />

        <TextView
            style="@style/mainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textColor="@color/whiteDD"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/turns_total"
            style="@style/mainTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textColor="@color/whiteDD"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">
        <Button
            android:id="@+id/menu_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/mainButtonStyle"
            android:background="@drawable/menu_btn"
            android:fontFamily="@font/sometypemono_bold"
            android:textColor="@color/menu_color"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"/>
        <Button
            android:id="@+id/restart_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/mainButtonStyle"
            android:background="@drawable/restart_btn" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>