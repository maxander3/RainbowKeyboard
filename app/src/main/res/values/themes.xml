<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RainbowKeyboard" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="linerButtonStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="mainTextStyle">
        <item name="android:shadowDx">2.4</item>
        <item name="android:shadowDy">-2.4</item>
        <item name="android:shadowRadius">0.01</item>
        <item name="android:shadowColor">@color/main_stroke_color</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="fontFamily">@font/sometypemono_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="mainButtonStyle">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="levelNumberBtnStyle">
        <item name="android:fontFamily">@font/sometypemono_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="medium_cube_style">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">60dp</item>
    </style>
</resources>